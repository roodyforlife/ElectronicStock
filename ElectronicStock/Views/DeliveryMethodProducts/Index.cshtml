@model IEnumerable<ElectronicStock.Models.DeliveryMethodProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Delivery Method Products Relations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryMethod.DeliveryMethodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryMethod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryMethod.DeliveryMethodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryMethod.MethodName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeliveryMethodProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeliveryMethodProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeliveryMethodProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
