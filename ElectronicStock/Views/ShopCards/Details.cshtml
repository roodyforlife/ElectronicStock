@model ElectronicStock.Models.ShopCard

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ShopCard</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            User email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ShopCardId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h4 class="mt-3">Products of ShopCard</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.ProductTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Cost)
            </th>
            <th>
                Quantity in shoping card
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Dimensions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Guarantee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.StorageConditions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards.First().Product.CreditAvailable)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cards)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Dimensions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Guarantee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.StorageConditions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Discount)
            </td>
            <td>
                <div style="width: 75px; height: 75px; ">
                    <img style='width: 100%; height: 100%; object-fit: contain;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Product.Image))" />
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.CreditAvailable)
            </td>
        </tr>
        }
    </tbody>
</table>
